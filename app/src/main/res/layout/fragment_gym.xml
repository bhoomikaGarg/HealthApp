<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GymFragment"
    android:background="@color/colorLightPink">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/gymFragmentMain">

    <androidx.cardview.widget.CardView
        android:id="@+id/beginner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/gymback">

        <TextView
            android:id="@+id/txtBeginner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEGINNER GYM"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="40sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBeginner"
            android:layout_centerHorizontal="true"
            android:text="3 days body workout routine"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="17sp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/intermediate"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/beginner"
        android:clickable="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/gymback1">

            <TextView
                android:id="@+id/txtIntermediate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INTERMEDIATE GYM"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textSize="35sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtIntermediate"
                android:layout_centerHorizontal="true"
                android:text="3 days body workout routine"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="17sp"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/advance"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/intermediate"
        android:clickable="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/gymback2">

            <TextView
                android:id="@+id/txtAdvance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADVANCE GYM"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textSize="40sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtAdvance"
                android:layout_centerHorizontal="true"
                android:text="7 days body workout routine"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="17sp"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>
