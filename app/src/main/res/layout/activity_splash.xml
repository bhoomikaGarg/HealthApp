<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorLightPink"
    android:layout_height="match_parent"
    tools:context=".activity.splashActivity">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/splash_img" />
    <TextView
        android:id="@+id/textViewSplash"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_below="@id/imageView1"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="4dp"
        android:textSize="13sp"
        android:padding="2dp"
        android:text="''Why to stress about your health when you've this app''"
        ></TextView>
    <TextView
        android:layout_below="@id/textViewSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp"
        android:layout_margin="4dp"
        android:padding="2dp"
        android:text="ATMANIRBHAR BANO!">

    </TextView>
</RelativeLayout>